<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bodrum"
    tools:context=".ProfilActivity">
    
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profil_resmi_ziyaret"
        android:src="@drawable/profil_resmi"
        android:layout_marginTop="160dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_width="210dp"
        android:layout_height="210dp"/>

    <TextView
        android:id="@+id/kullanici_adi_ziyaret"
        android:textAlignment="center"
        android:layout_below="@+id/profil_resmi_ziyaret"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:text="Kullan覺c覺 Ad覺"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/profil_durumu_ziyaret"
        android:textAlignment="center"
        android:layout_below="@+id/kullanici_adi_ziyaret"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="17sp"
        android:layout_marginTop="30dp"
        android:textAllCaps="false"
        android:text="Merhaba ben WPChatApp3 kullan覺yorum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</RelativeLayout>